{% extends "base.html.twig" %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.0.1/css/bootstrap.min.css" />
{% endblock %}
{% block body %}
<div class="container">
    <h1>Export jobs</h1>

    {% for label, messages in app.flashes(['success', 'warning', 'error']) %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.format) }}
            </div>
        </div>
    </div>
    <div class="mb-3">
        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.email) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            {{ form_widget(form.save, { 'label': 'Start export' }) }}
        </div>
    </div>
</div>
{{ form_end(form) }}
{% endblock %}
